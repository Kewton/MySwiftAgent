# CommonUI Environment Configuration Template
# Copy this file to .env and configure your settings

# ==============================================================================
# JobQueue API Configuration
# ==============================================================================
JOBQUEUE_BASE_URL=http://localhost:8001
JOBQUEUE_API_TOKEN=your_jobqueue_api_token_here

# ==============================================================================
# MyScheduler API Configuration
# ==============================================================================
MYSCHEDULER_BASE_URL=http://localhost:8002
MYSCHEDULER_API_TOKEN=your_myscheduler_api_token_here

# ==============================================================================
# MyVault API Configuration
# ==============================================================================
MYVAULT_BASE_URL=http://localhost:8000
# MyVault uses service-based authentication
# Set the service name and token that matches your myVault config.yaml
MYVAULT_SERVICE_NAME=commonui-service
MYVAULT_SERVICE_TOKEN=your_myvault_service_token_here

# ==============================================================================
# UI Configuration
# ==============================================================================

# Polling interval for auto-refresh (in seconds)
POLLING_INTERVAL=5

# Default service to display on startup
# Options: JobQueue, MyScheduler
DEFAULT_SERVICE=JobQueue

# Operation mode for the interface
# Options: full, readonly
# - full: All operations enabled (create, update, delete)
# - readonly: View-only mode (monitoring and inspection only)
OPERATION_MODE=full

# ==============================================================================
# Development and Debugging
# ==============================================================================

# Enable debug mode for verbose logging
# DEBUG=true

# Log level for application logging
# Options: DEBUG, INFO, WARNING, ERROR, CRITICAL
# LOG_LEVEL=INFO

# ==============================================================================
# Security Settings
# ==============================================================================

# API request timeout (in seconds)
# API_TIMEOUT=30

# Maximum retry attempts for failed requests
# MAX_RETRIES=3

# Enable SSL verification for HTTPS requests
# VERIFY_SSL=true

# ==============================================================================
# Optional: Streamlit Secrets Alternative
# ==============================================================================
# Instead of using .env, you can configure these settings in
# .streamlit/secrets.toml for better security:
#
# [secrets]
# JOBQUEUE_BASE_URL = "http://localhost:8001"
# JOBQUEUE_API_TOKEN = "your_token"
# MYSCHEDULER_BASE_URL = "http://localhost:8002"
# MYSCHEDULER_API_TOKEN = "your_token"
# POLLING_INTERVAL = 5
# DEFAULT_SERVICE = "JobQueue"
# OPERATION_MODE = "full"

# ==============================================================================
# Production Notes
# ==============================================================================
#
# 1. Never commit real tokens or passwords to version control
# 2. Use strong, unique API tokens for each service
# 3. Consider using environment-specific configuration files:
#    - .env.development
#    - .env.staging
#    - .env.production
# 4. For production deployment, consider using:
#    - Docker secrets
#    - Kubernetes secrets
#    - Cloud provider secret management services
# 5. Regularly rotate API tokens for security
#